{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": [
      "node",
      "express",
      "multer"
    ],
    "emitDecoratorMetadata": true,
    "target": "es2021",
    "paths": {
      "@/*": [
        "src/*",
      ],
    },
  },
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
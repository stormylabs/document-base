{
  "name": "web-chatbot",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/web-chatbot",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "outputPath": "dist/packages/web-chatbot",
        "generatePackageJson": true
      },
      "configurations": {
        "development": {
          "outputPath": "packages/web-chatbot"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "web-chatbot:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "web-chatbot:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "web-chatbot:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "web-chatbot:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/web-chatbot/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/web-chatbot/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build -f packages/web-chatbot/Dockerfile . -t web"
    },
    "docker-push": {
      "dependsOn": ["docker-build"],
      "command": "docker push"
    }
  },
  "tags": []
}
